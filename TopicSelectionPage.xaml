<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WordPuzzleGame.TopicSelectionPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Select Topic">
    <ScrollView>
        <Grid Padding="30" RowSpacing="20" ColumnSpacing="20" VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.ColumnSpan="2" Text="Choose a Topic" FontSize="28" HorizontalOptions="Center" />
            <Button Grid.Row="1" Grid.Column="0" Text="Computer" Command="{Binding SelectTopicCommand}" CommandParameter="computer" />
            <Button Grid.Row="1" Grid.Column="1" Text="AI" Command="{Binding SelectTopicCommand}" CommandParameter="artificial intelligence" />
            <Button Grid.Row="2" Grid.Column="0" Text="Programming" Command="{Binding SelectTopicCommand}" CommandParameter="computer programming" />
            <Button Grid.Row="2" Grid.Column="1" Text="Math" Command="{Binding SelectTopicCommand}" CommandParameter="math" />
            <Button Grid.Row="3" Grid.Column="0" Text="History" Command="{Binding SelectTopicCommand}" CommandParameter="history" />
            <Button Grid.Row="3" Grid.Column="1" Text="Fruit" Command="{Binding SelectTopicCommand}" CommandParameter="fruit" />
            <Button Grid.Row="4" Grid.Column="0" Text="Vegetable" Command="{Binding SelectTopicCommand}" CommandParameter="vegetable" />
            <Button Grid.Row="4" Grid.Column="1" Text="Meal" Command="{Binding SelectTopicCommand}" CommandParameter="meal" />
            <Button Grid.Row="5" Grid.Column="0" Text="Animal" Command="{Binding SelectTopicCommand}" CommandParameter="animal" />
            <Button Grid.Row="5" Grid.Column="1" Text="Ocean" Command="{Binding SelectTopicCommand}" CommandParameter="ocean" />
            <Button Grid.Row="6" Grid.Column="0" Text="Football" Command="{Binding SelectTopicCommand}" CommandParameter="football" />
            <Button Grid.Row="6" Grid.Column="1" Text="Cricket" Command="{Binding SelectTopicCommand}" CommandParameter="cricket" />
            <Button Grid.Row="7" Grid.Column="0" Text="Music" Command="{Binding SelectTopicCommand}" CommandParameter="music" />
            <Button Grid.Row="7" Grid.Column="1" Text="Film" Command="{Binding SelectTopicCommand}" CommandParameter="film" />
            <Button Grid.Row="8" Grid.Column="0" Text="Medicine" Command="{Binding SelectTopicCommand}" CommandParameter="medicine" />
            <Button Grid.Row="8" Grid.Column="1" Text="Fitness" Command="{Binding SelectTopicCommand}" CommandParameter="fitness" />
            <Button Grid.Row="9" Grid.Column="0" Text="Space" Command="{Binding SelectTopicCommand}" CommandParameter="space" />
            <Button Grid.Row="9" Grid.Column="1" Text="Art" Command="{Binding SelectTopicCommand}" CommandParameter="art" />
        </Grid>
    </ScrollView>
</ContentPage>
