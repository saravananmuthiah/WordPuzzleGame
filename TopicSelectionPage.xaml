<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WordPuzzleGame.TopicSelectionPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Select Topic">
    <ScrollView>
        <Grid Padding="30" RowSpacing="20" ColumnSpacing="20" VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.ColumnSpan="2" Text="Choose a Topic" FontSize="28" HorizontalOptions="Center" />
            <Button Grid.Row="1" Grid.Column="0" Text="Fun" Command="{Binding SelectTopicCommand}" CommandParameter="fun" />
            <Button Grid.Row="1" Grid.Column="1" Text="Technology" Command="{Binding SelectTopicCommand}" CommandParameter="technology" />
            <Button Grid.Row="2" Grid.Column="0" Text="Science" Command="{Binding SelectTopicCommand}" CommandParameter="science" />
            <Button Grid.Row="2" Grid.Column="1" Text="Grammar" Command="{Binding SelectTopicCommand}" CommandParameter="grammar" />
            <Button Grid.Row="3" Grid.Column="0" Text="Sports" Command="{Binding SelectTopicCommand}" CommandParameter="sports" />
            <Button Grid.Row="3" Grid.Column="1" Text="Music" Command="{Binding SelectTopicCommand}" CommandParameter="music" />
            <Button Grid.Row="4" Grid.Column="0" Text="Movies" Command="{Binding SelectTopicCommand}" CommandParameter="movies" />
            <Button Grid.Row="4" Grid.Column="1" Text="History" Command="{Binding SelectTopicCommand}" CommandParameter="history" />
            <Button Grid.Row="5" Grid.Column="0" Text="Travel" Command="{Binding SelectTopicCommand}" CommandParameter="travel" />
            <Button Grid.Row="5" Grid.Column="1" Text="Food" Command="{Binding SelectTopicCommand}" CommandParameter="food" />
            <Button Grid.Row="6" Grid.Column="0" Text="Nature" Command="{Binding SelectTopicCommand}" CommandParameter="nature" />
            <Button Grid.Row="6" Grid.Column="1" Text="Art" Command="{Binding SelectTopicCommand}" CommandParameter="art" />
            <Button Grid.Row="7" Grid.Column="0" Text="Literature" Command="{Binding SelectTopicCommand}" CommandParameter="literature" />
            <Button Grid.Row="7" Grid.Column="1" Text="Animals" Command="{Binding SelectTopicCommand}" CommandParameter="animals" />
            <Button Grid.Row="8" Grid.Column="0" Text="Fashion" Command="{Binding SelectTopicCommand}" CommandParameter="fashion" />
            <Button Grid.Row="8" Grid.Column="1" Text="Space" Command="{Binding SelectTopicCommand}" CommandParameter="space" />
        </Grid>
    </ScrollView>
</ContentPage>
