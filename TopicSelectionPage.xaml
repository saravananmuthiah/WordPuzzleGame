<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WordPuzzleGame.TopicSelectionPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Select Topic"
    BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource OffBlack}}">
    <Grid>
        <Image Source="topic_bg.png" Aspect="AspectFill" Opacity="0.18" />
        <ScrollView>
            <Grid Padding="30" RowSpacing="20" ColumnSpacing="20" VerticalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" /> <!-- 0: Title -->
                    <RowDefinition Height="Auto" /> <!-- 1: Computer, Math -->
                    <RowDefinition Height="Auto" /> <!-- 2: History, Fruit -->
                    <RowDefinition Height="Auto" /> <!-- 3: Vegetable, Meal -->
                    <RowDefinition Height="Auto" /> <!-- 4: Animal, Ocean -->
                    <RowDefinition Height="Auto" /> <!-- 5: Football, Cricket -->
                    <RowDefinition Height="Auto" /> <!-- 6: Music, Film -->
                    <RowDefinition Height="Auto" /> <!-- 7: Medicine, Fitness -->
                    <RowDefinition Height="Auto" /> <!-- 8: Space, Art -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.ColumnSpan="2" Text="Choose a Topic" Style="{StaticResource Headline}" />
                <Button Grid.Row="1" Grid.Column="0" Text="Computer" Command="{Binding SelectTopicCommand}" CommandParameter="computer" />
                <Button Grid.Row="1" Grid.Column="1" Text="Math" Command="{Binding SelectTopicCommand}" CommandParameter="math" />
                <Button Grid.Row="2" Grid.Column="0" Text="History" Command="{Binding SelectTopicCommand}" CommandParameter="history" />
                <Button Grid.Row="2" Grid.Column="1" Text="Fruit" Command="{Binding SelectTopicCommand}" CommandParameter="fruit" />
                <Button Grid.Row="3" Grid.Column="0" Text="Vegetable" Command="{Binding SelectTopicCommand}" CommandParameter="vegetable" />
                <Button Grid.Row="3" Grid.Column="1" Text="Meal" Command="{Binding SelectTopicCommand}" CommandParameter="meal" />
                <Button Grid.Row="4" Grid.Column="0" Text="Animal" Command="{Binding SelectTopicCommand}" CommandParameter="animal" />
                <Button Grid.Row="4" Grid.Column="1" Text="Ocean" Command="{Binding SelectTopicCommand}" CommandParameter="ocean" />
                <Button Grid.Row="5" Grid.Column="0" Text="Football" Command="{Binding SelectTopicCommand}" CommandParameter="football" />
                <Button Grid.Row="5" Grid.Column="1" Text="Cricket" Command="{Binding SelectTopicCommand}" CommandParameter="cricket" />
                <Button Grid.Row="6" Grid.Column="0" Text="Music" Command="{Binding SelectTopicCommand}" CommandParameter="music" />
                <Button Grid.Row="6" Grid.Column="1" Text="Film" Command="{Binding SelectTopicCommand}" CommandParameter="film" />
                <Button Grid.Row="7" Grid.Column="0" Text="Medicine" Command="{Binding SelectTopicCommand}" CommandParameter="medicine" />
                <Button Grid.Row="7" Grid.Column="1" Text="Fitness" Command="{Binding SelectTopicCommand}" CommandParameter="fitness" />
                <Button Grid.Row="8" Grid.Column="0" Text="Space" Command="{Binding SelectTopicCommand}" CommandParameter="space" />
                <Button Grid.Row="8" Grid.Column="1" Text="Art" Command="{Binding SelectTopicCommand}" CommandParameter="art" />
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
