<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WordPuzzleGame.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WordPuzzleGame"
    xmlns:vm="clr-namespace:WordPuzzleGame.ViewModels"
    Title="WordPuzzleGame">

    <Shell.FlyoutHeader>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label
                FontSize="16"
                Text="Theme"
                VerticalOptions="Center" />
            <Picker
                ItemsSource="{Binding Source={x:Static vm:ThemeViewModel.Themes}}"
                SelectedItem="{Binding ThemeVM.CurrentTheme, Mode=TwoWay}"
                VerticalOptions="Center" />
        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <ShellContent ContentTemplate="{DataTemplate local:TopicSelectionPage}" Route="TopicSelectionPage" />
    <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
    <!--  GamePage is navigated to via Shell.Current.GoToAsync, not as a ShellContent  -->

    <Shell.NavBarIsVisible>
        <OnIdiom x:TypeArguments="x:Boolean">
            <OnIdiom.Phone>False</OnIdiom.Phone>
            <OnIdiom.Tablet>False</OnIdiom.Tablet>
            <OnIdiom.Desktop>False</OnIdiom.Desktop>
        </OnIdiom>
    </Shell.NavBarIsVisible>

</Shell>
